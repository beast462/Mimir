<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="net.beast462.int2204.mimir.application.controllers.AskForExternalDataController">
    <padding>
        <Insets bottom="12" left="12" right="12" top="12"/>
    </padding>
    <AnchorPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0"
                AnchorPane.rightAnchor="0">
        <VBox spacing="30">
            <TextFlow maxWidth="320">
                <Text>
                    <font>
                        <Font name="Roboto Light" size="14"/>
                    </font>
                    It seems like we don't have any data yet. Would you like to load it from our recommended source?
                </Text>
            </TextFlow>

            <HBox alignment="BOTTOM_RIGHT" spacing="5">
                <JFXButton buttonType="FLAT" layoutX="140" layoutY="49" ripplerFill="#f0f5ff"
                           text="NO" textFill="#232323" onMouseClicked="#decline">
                    <font>
                        <Font name="Roboto Bold" size="14"/>
                    </font>
                </JFXButton>

                <JFXButton buttonType="RAISED" layoutX="140" layoutY="49" ripplerFill="#f0f5ff"
                           style="-fx-background-color: #e0e0e0" text="REMIND LATER" textFill="#232323" onMouseClicked="#remindLater">
                    <font>
                        <Font name="Roboto Bold" size="14"/>
                    </font>
                </JFXButton>

                <JFXButton buttonType="RAISED" layoutX="140" layoutY="49" ripplerFill="#f0f5ff"
                           style="-fx-background-color: #1976d2" text="YES" textFill="#fff" onMouseClicked="#accept">
                    <font>
                        <Font name="Roboto Bold" size="14"/>
                    </font>
                </JFXButton>
            </HBox>
        </VBox>
    </AnchorPane>
</AnchorPane>
